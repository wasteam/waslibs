<base:BaseControlPage
    x:Class="AppStudio.Samples.Uwp.ControlPages.ReadingWebView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Samples.Uwp.ControlPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="using:AppStudio.Samples.Uwp.ControlPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:ReadingWebView
            x:Name="readingWebView"
            ImageUrl="{Binding ImageUrl}"  Title="{Binding Title}" SubTitle="{Binding SubTitle}" DetailContent="{Binding WebContent}"
            FlyoutEnabled="True" Background="Transparent" Foreground="Black" ContentAlignment="Left">
            <controls:ReadingWebView.FlyoutTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Stretch" Background="DarkGray"  VerticalAlignment="Top" Margin="-12,0">
                        <TextBlock Text="{Binding Title}" FontSize="25" Foreground="White" MaxLines="4" Margin="24,6,24,6" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </controls:ReadingWebView.FlyoutTemplate>
        </controls:ReadingWebView>
        <CommandBar Grid.Row="1">
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Small Text" Command="{Binding ChangeFontSizeCommand}" CommandParameter="16"/>
                <AppBarButton Label="Medium Text" Command="{Binding ChangeFontSizeCommand}" CommandParameter="20"/>
                <AppBarButton Label="Big Text" Command="{Binding ChangeFontSizeCommand}" CommandParameter="24"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</base:BaseControlPage>
