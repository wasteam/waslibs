<UserControl
    x:Class="AppStudio.Uwp.Samples.ImageExSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300">

    <Grid BorderBrush="LightGray" BorderThickness="1,0,0,0">
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.85"/>
        </Grid.Background>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="24">
                <Button Margin="12,6" Content="Clear Cache" HorizontalAlignment="Stretch" Click="OnClearCache" />
                <Button Margin="12,6" Content="Refresh" HorizontalAlignment="Stretch" Click="OnRefresh" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
