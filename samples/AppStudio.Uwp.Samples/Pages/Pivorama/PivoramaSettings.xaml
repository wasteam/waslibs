<UserControl
    x:Class="AppStudio.Uwp.Samples.PivoramaSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300">

    <Grid BorderBrush="LightGray" BorderThickness="1,0,0,0">
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.85"/>
        </Grid.Background>
        <StackPanel Padding="24">
            <controls:PropertySet Source="{Binding}" Property="ItemWidth" Value="{Binding ItemWidth, Mode=TwoWay}" Minimun="300" Maximun="600" SmallChange="10" />
            <controls:PropertySet Source="{Binding}" Property="FitToScreen" Value="{Binding FitToScreen, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>
