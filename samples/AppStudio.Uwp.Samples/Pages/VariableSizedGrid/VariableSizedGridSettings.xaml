<UserControl
    x:Class="AppStudio.Uwp.Samples.VariableSizedGridSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300">

    <Grid BorderBrush="LightGray" BorderThickness="1,0,0,0">
        <Grid Background="White" Opacity="0.85" />
        <StackPanel Padding="24">
            <controls:PropertySet Source="{Binding}" Property="MaximumRowsOrColumns" Value="{Binding MaximumRowsOrColumns, Mode=TwoWay}" Minimun="2" Maximun="12" SmallChange="2" />
            <controls:PropertySet Source="{Binding}" Property="Orientation" Value="{Binding Orientation, Mode=TwoWay}" />
            <controls:PropertySet Source="{Binding}" Property="AspectRatio" Value="{Binding AspectRatio, Mode=TwoWay}" Minimun="0.1" Maximun="2.0" SmallChange="0.05" />
        </StackPanel>
    </Grid>
</UserControl>
