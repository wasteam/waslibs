<Page
    x:Class="AppStudio.Uwp.Samples.VirtualBoxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Background="#eee">
            <controls:Virtualbox x:Name="control" VirtualWidth="600" VirtualHeight="400" MaxWidth="700">
                <Grid Margin="6" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Image Source="/Assets/Images/HeroImage.png" Stretch="UniformToFill" HorizontalAlignment="Center" />
                    </Grid>
                    <Grid Grid.Row="1" Background="#eee">
                        <TextBlock Margin="10" FontSize="18" TextWrapping="Wrap" TextTrimming="WordEllipsis" Text="Lorem ipsum dolor sit amet..." />
                    </Grid>
                </Grid>
            </controls:Virtualbox>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <TextBlock Margin="12" FontSize="22" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet..." />
        </Grid>
    </Grid>
</Page>
